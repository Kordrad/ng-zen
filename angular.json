{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm",
    "schematicCollections": ["angular-eslint"]
  },
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss",
      "changeDetection": "OnPush"
    }
  },
  "projects": {
    "cli": {
      "projectType": "library",
      "root": "projects/cli",
      "sourceRoot": "projects/cli/schematics",
      "prefix": "zen",
      "architect": {
        "build": {
          "builder": "./projects/cli:build",
          "options": {
            "files": [
              "projects/cli/src/schematics/*/schema.json",
              "projects/cli/src/schematics/*/files/**",
              "projects/cli/src/schematics/*/templates/**",
              "projects/cli/src/schematics/collection.json",
              "projects/cli/README.md",
              "projects/cli/package.json",
              "LICENSE"
            ],
            "tsConfig": "projects/cli/tsconfig.schematics.json",
            "outputDir": "/dist/@ng-zen/cli/"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "./jest.config.ts",
            "tsConfig": "tsconfig.spec.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/cli/**/*.ts", "projects/cli/**/*.html"],
            "eslintConfig": "projects/cli/eslint.config.js"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/cli/.storybook",
            "browserTarget": "cli:build",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", "projects/cli"],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/cli/.storybook",
            "browserTarget": "cli:build",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", "projects/cli"],
            "outputDir": "storybook-static"
          }
        }
      }
    }
  }
}
