{
  "name": "@ng-zen/cli",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc -p tsconfig.schematics.json -w",
    "postbuild": "npm run copy-files && npm run clean-packagejson",
    "copy-files": "copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json package.json **/README.md ../../dist/@ng-zen/cli/",
    "clean-packagejson": "cd ../../dist/@ng-zen/cli && npm pkg delete scripts"
  },
  "schematics": "./schematics/collection.json",
  "ng-add": {
    "save": "devDependencies"
  },
  "peerDependencies": {
    "@angular/common": "^17.3.0",
    "@angular/core": "^17.3.0"
  },
  "dependencies": {
    "@angular-devkit/core": "^17.3.0",
    "@angular-devkit/schematics": "^17.3.0",
    "tslib": "^2.3.0"
  },
  "sideEffects": false
}
